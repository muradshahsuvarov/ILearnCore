@model List<ILearnCoreV19.Areas.Identity.Data.ApplicationUser>

@{
    ViewData["Title"] = "Teachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Teachers";
}


<table class="table">
    <tr>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th>
            Email
        </th>
        <th>
            DateOfBirth
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>

                @Html.ActionLink("Details", "GetDetails", "User", new { id = item.UserName }, null) |
                @Html.ActionLink("Schedule", "ListOfEvents", "User", new { id = item.UserName }, null) |
                @Html.ActionLink("Open Chat", "ReloadOpenChat", "User", new { selectedUser = item.UserName }, null)
            </td>
        </tr>
    }

</table>
