@model List<ILearnCoreV19.Areas.Identity.Data.ApplicationEvent>

@{
    ViewData["Title"] = "ListOfEvents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    @using Microsoft.AspNetCore.Http;


@{
    
}

<table class="table">
    <tr>
        <th>
            text
        </th>
        <th>
            start_date
        </th>
        <th>
            end_date
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_date)
            </td>
            <td>
                @using (Html.BeginForm("Subscribe", "User", FormMethod.Post))
                {
                    <!-- form goes here -->
                    @Html.Hidden("userName", item.userId)
                    @Html.Hidden("eventId", item.EventId)
                    @Html.Hidden("email", User.Identity.Name)
                    @Html.Hidden("returnUrl", "/User/ListOfEvents")
                    <input type="submit" value="Subscribe" class="btn btn-success" style="width:200px" />
                }
            </td>
        </tr>
    }

</table>